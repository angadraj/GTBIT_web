{
    "name":"Dev Ext",
    "version":"1.0",
    "description":"it changes all images in current page",
    "manifest_version":2,
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "css":[
                "style.css"   
            ],
            "js":[
                "contentScript.js"
            ]
        }
    ],
    "browser_action":{
        "default_popup":"hello.html"
    },
    "background":{
        "scripts":[
            "background.js"
        ],
        "persistent":true
    },
    "web_accessible_resources":[
       "Images/*"
    ]
}